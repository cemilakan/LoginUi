<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="withMatchHeightWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editTextStyle" parent="withMatchHeightWrap">
        <item name="android:backgroundTint">@color/tintColor</item>
        <item name="android:textSize">@dimen/loginInputTextSize</item>

    </style>

    <style name="withMachHeightMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="withWrapHeightWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginButton" parent="withWrapHeightWrap">
        <item name="android:background">@drawable/login_button_bg</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardMMargin" parent="withMatchHeightWrap">
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:layout_marginBottom">@dimen/loginMargin</item>
        <item name="android:layout_marginLeft">@dimen/loginCardLeftRight</item>
        <item name="android:layout_marginRight">@dimen/loginCardLeftRight</item>
    </style>
</resources>
